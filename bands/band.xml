<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE musicBands SYSTEM "band.dtd">

<!-- El root del xml es musicBands -->
<musicBands>
    <band>
        <name>Queen</name>
        <!-- utilice una etiqueta en la que se especifica el atributo donde se indique
        cual es el genero principal -->
        <genres main="rock">
            <genre>rock</genre>
            <genre>pop</genre>
        </genres>
        <webpage>queen.com</webpage>
        <!-- los miembros es una etiqueta en donde estan almacenados los miembros de la banda  y cuentan con
        un atributo que indica la cantidad de miembros-->
        <members number="3">
            <member>
                <nameMember>Freddie Mercury</nameMember>
                <ageMember>68</ageMember>
            </member>
            <member>
                <nameMember>Brian May</nameMember>
                <ageMember>77</ageMember>
            </member>
            <member>
                <nameMember>Roger Taylor</nameMember>
                <ageMember>85</ageMember>
            </member>
        </members>
        <numConcerts>0</numConcerts>
        <numFans>10000000</numFans>
    </band>
    <band>
        <name>Soda Estereo</name>
        <genres main="pop">
            <genre>pop</genre>
            <genre>rock</genre>
        </genres>
        <webpage>sestereo.com</webpage>
        <members number="2">
            <member>
                <nameMember>Gustavo Cerati</nameMember>
                <ageMember>30</ageMember>
            </member>
            <member>
                <nameMember>Zeta Bosio</nameMember>
                <ageMember>28</ageMember>
            </member>
        </members>
        <numConcerts>12</numConcerts>
        <numFans>5000000</numFans>
    </band>
</musicBands>